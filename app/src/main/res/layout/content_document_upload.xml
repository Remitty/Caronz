<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
          android:id="@+id/content_document_upload"
    tools:context=".profile.DocumentUploadFragment">

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="15dp"
          android:orientation="vertical">


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Add driving license"
                  android:textColor="@color/gray700"
                  android:gravity="left"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"/>

              <ImageView
                  android:id="@+id/image_license"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_weight="2"
                  android:contentDescription="@null"
                  android:src="@drawable/upload_placeholder" />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Add registration info"
                  android:textColor="@color/gray700"
                  android:gravity="left"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"/>

              <ImageView
                  android:id="@+id/image_register"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_weight="2"
                  android:contentDescription="@null"
                  android:src="@drawable/upload_placeholder" />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Proof of insurance"
                  android:textColor="@color/gray700"
                  android:gravity="left"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"/>

              <ImageView
                  android:id="@+id/image_insurance"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_weight="2"
                  android:contentDescription="@null"
                  android:src="@drawable/upload_placeholder" />

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Other document"
                  android:textColor="@color/gray700"
                  android:gravity="left"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"/>

              <ImageView
                  android:id="@+id/image_other1"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_weight="2"
                  android:contentDescription="@null"
                  android:src="@drawable/upload_placeholder" />

          </LinearLayout>
          <Button
              android:id="@+id/btnSave"
              android:layout_marginTop="10dp"
              android:text="@string/save"
              style="@style/Button.Primary" />
          <TextView
              android:id="@+id/tv_skip"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:text="Skip"
              android:textSize="24dp"
              android:textStyle="bold"
              android:textColor="@color/gray"
              android:gravity="center_horizontal"
              android:layout_gravity="center_vertical"
              android:layout_weight="1"/>
      </LinearLayout>
  </androidx.core.widget.NestedScrollView>

</FrameLayout>