<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Location: " />
                <AutoCompleteTextView
                    android:id="@+id/location_autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/imageview_border"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:layout_marginLeft="10dp"
                    android:hint="City, State, Country"
                    android:visibility="visible"
                    android:maxLines="1"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:text="Brand" />
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/cat_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:text="Transmission" />
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/transmission_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:text="No. Seats"/>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/seat_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Distance"/>
                <EditText
                    android:id="@+id/postSpeedET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:layout_marginLeft="10dp"
                    android:hint="0.0"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/imageview_border"
                    android:inputType="numberDecimal" />
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/units_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:text="Model"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/postTitleET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/imageview_border"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:text="Year"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/postYearET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/imageview_border"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Address"/>

                <AutoCompleteTextView
                    android:id="@+id/address_autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/imageview_border"
                    android:visibility="visible"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/placeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mapViewONOFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/googleMapLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        class="com.remitty.caronz.helper.WorkaroundMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/latlongLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/latET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="numberDecimal|numberSigned"
                            android:maxLength="15"
                            android:hint="Latitude"
                            android:focusable="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">



                        <EditText
                            android:id="@+id/longET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="numberDecimal|numberSigned"
                            android:maxLength="15"
                            android:hint="Longtitude"
                            android:focusable="false"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="I want to"/>
                <RadioGroup
                    android:id="@+id/rdg_service"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rdb_rent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:text="Rent"
                        android:layout_height="40dp"/>
                    <RadioButton
                        android:id="@+id/rdb_sell"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:text="Sell"
                        android:layout_height="40dp"/>
                    <RadioButton
                        android:id="@+id/rdb_drive"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:text="Drive"
                        android:layout_height="40dp"/>
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/next1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@null"
                android:text="Next"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
