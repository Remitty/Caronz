<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:orientation="horizontal"
    android:gravity="center"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_2x"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:paddingEnd="5dp"
            android:paddingStart="5dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circ"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_1x"
            android:orientation="vertical">
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/b5_line_height"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:lineHeight="@dimen/b5_line_height"
                android:textSize="@dimen/b5_font_size"
                 />

            <TextView
                android:id="@+id/useremail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/b4_line_height"
                android:layout_below="@+id/username"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="@dimen/b4_font_size"
                android:textColor="#c2c2c2"
                android:lineHeight="@dimen/b4_line_height"
                android:text="Email" />
            <LinearLayout
                android:layout_below="@+id/useremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/b4_font_size"
                    android:textColor="#ECF8ED"
                    android:lineHeight="@dimen/b4_line_height"
                    android:text="View Profile" />
                <View
                    android:layout_width="90dp"
                    android:layout_height=".5dp"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:background="@color/white"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
